{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        // "${file}", // to build currently opened file
        "-o",
        "${workspaceFolder}\\a.exe",
        "${workspaceFolder}\\a.cpp",
        "-lole32",
        "-loleaut32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
